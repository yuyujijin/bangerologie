<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Colocathon : équipes</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Montserrat, Koulen & Lobster -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Koulen&family=Lobster&display=swap"
        rel="stylesheet">
    <!-- Mapbox -->
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.8.1/mapbox-gl.css' rel='stylesheet' />


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <!-- Mapbox -->
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.8.1/mapbox-gl.js'></script>

    <style>
        @font-face {
            font-family: "Fictoria";
            src: url("../assets/fonts/Fictoria-Regular.woff2") format("woff2"),
                url("../assets/fonts/Fictoria-Regular.woff") format("woff")
        }

        body {
            background-color: #a6eefe;
        }

        .header-img {
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .person-list {
            text-align: center;
        }

        .who,
        .what,
        .where {
            text-align: left;
            font-family: 'Koulen', cursive;
            color: #102168;
            margin-bottom: 30px;
        }

        .team-container {
            margin-bottom: 20px;
        }

        .team-container h1 {
            font-family: 'Koulen', cursive;
            color: #102168;
        }

        .ticket {
            border-radius: 15px;
            background-color: rgb(255, 255, 255);
            display: inline-block;
            vertical-align: middle;
            margin: 5px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 500;
            color: white;
            background-size: cover;
        }

        .ticket .ticket-photo {
            margin: 0;
            padding: 10px;
            width: 80px;
            height: 80px;
            display: inline-block;
            vertical-align: middle;
        }

        .ticket .ticket-photo img {
            border-radius: 100%;
            width: 100%;
            height: 100%;
            border: .5px solid white;
            object-fit: cover;
            margin: 0;
            padding: 0;
        }

        .ticket .infos {
            margin: 0;
            width: 70%;
            display: inline-block;
            text-align: left;
            vertical-align: middle;
            padding-left: 10px;
        }

        .ticket-name {
            margin-top: 1rem;
            margin-bottom: 0;
        }

        /* computer */
        @media screen and (min-width: 920px) {
            .wrapper {
                width: 42%;
                margin-left: auto;
                margin-right: auto;
            }

            .ticket {
                width: 40%;
                margin: 5px;
            }

            #map {
                width: 500px;
                height: 300px;
            }
        }

        @media screen and (max-width: 919px) {
            .wrapper {
                margin: 0;
                width: 100%;
            }

            .ticket {
                width: 95%;
                margin: 5px;
            }

            #map {
                width: 300px;
                height: 200px;
            }
        }

        .marker {
            background-image: url("<%= img_url + 'beer-icon.png' %>");
            background-size: cover;
            width: 30px;
            height: 30px;
            cursor: pointer;
        }
    </style>

</head>

<body>
    <div class="container-fluid w-100 h-100 d-flex justify-content-center">
        <div class="wrapper">
            <div class="content w-100">
                <img src="<%= img_url + 'colocartoon.png' %>" class="img-fluid w-100 header-img" alt="banner">
                <div class="where">
                    <h1>+ Ou?</h1>
                    <div id='map' style='margin-left: auto; margin-right:auto'></div>
                    <script>
                        mapboxgl.accessToken = 'pk.eyJ1IjoieXV5dWppamluIiwiYSI6ImNsMzM5ODRiNzFlNGgzanBzbGdoY2F2cncifQ.GWSbF3ONfyt03sXPVOq04Q';

                        var map = new mapboxgl.Map({
                            container: 'map',
                            style: 'mapbox://styles/yuyujijin/cl33a940w007k14pft5wvo6sl',
                            center: [2.814425, 49.410622],
                            zoom: 13
                        });

                        const geojson = {
                            type: 'FeatureCollection',
                            features: [
                                {
                                    type: 'Feature',
                                    geometry: {
                                        type: 'Point',
                                        coordinates: [2.811484, 49.408859]
                                    },
                                    properties: {
                                        title: 'Mapbox',
                                        description: 'Saint Fiack'
                                    }
                                },
                                {
                                    type: 'Feature',
                                    geometry: {
                                        type: 'Point',
                                        coordinates: [2.821032, 49.410998]
                                    },
                                    properties: {
                                        title: 'Mapbox',
                                        description: 'Animalerie'
                                    }
                                },
                                {
                                    type: 'Feature',
                                    geometry: {
                                        type: 'Point',
                                        coordinates: [2.80899, 49.410408]
                                    },
                                    properties: {
                                        title: 'Mapbox',
                                        description: 'Louli & Mad'
                                    }
                                }
                            ]
                        };

                        // add markers to map
                        for (const feature of geojson.features) {
                            // create a HTML element for each feature
                            const el = document.createElement('div');
                            el.className = 'marker';

                            // make a marker for each feature and add to the map
                            new mapboxgl.Marker(el).setLngLat(feature.geometry.coordinates).addTo(map);
                        }

                    </script>
                </div>
                <div class="what">
                    <h1>+ Comment?</h1>
                    <h3 style="text-align:center">
                        Départ <del>18h30</del> 19h30 &bull; Démarrage à vos colocs assignées &bull; Ramenez vos tises &
                        ters
                    </h3>
                </div>
                <div class="who">
                    <h1>+ Avec qui?</h1>
                    <div class="person-list w-100">
                        <% for (const [key, value] of Object.entries(teams)) { %>
                            <div class="team-container">
                                <h3>
                                    <%= (key !='0' )? 'Equipe ' + key : 'Sans equipe' %>
                                </h3>
                                <% for (var i=0; i < value.length; i++) { %>
                                    <div class="ticket"
                                        style="background-image: url('<%= img_url + 'equipe' + key + '.png' %>');">

                                        <div class="ticket-photo">
                                            <img src="<%= img_url + 'profiles/' + value[i].img.S + '.jpg' %>"
                                                class="ticket-photo" alt="<%= value[i].img.S %>" />
                                        </div>
                                        <div class="infos">
                                            <p class="ticket-name">
                                                <%= value[i].prenom.S + ' ' + value[i].nom.S %>
                                            </p>
                                            <p class="ticket-username">
                                                <%= '"' + value[i].pseudo.S + '"' %>
                                            </p>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                            <% } %>
                    </div> <!-- /person-list -->
                </div>

            </div> <!-- /content -->
        </div> <!-- /wrapper -->
    </div> <!-- /container -->

</body>

</html>